{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "bundlesize": [
    {
      "path": "./packages/core/dist/core.cjs.production.min.js",
      "maxSize": "4 kB",
      "compression": "none"
    },
    {
      "path": "./packages/dom/dist/dom.cjs.production.min.js",
      "maxSize": "1 kB",
      "compression": "none"
    },
    {
      "path": "./packages/utils/dist/utils.cjs.production.min.js",
      "maxSize": "4 kB",
      "compression": "none"
    }

  ],
  "scripts": {
    "build": "wsrun build",
    "build:ci": "yarn build && bundlesize",
    "lint": "wsrun lint",
    "test:ci": "cross-env CI=true wsrun test:ci",
    "ci": "yarn build:ci && yarn test:ci"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "bundlesize": "^0.18.0",
    "cross-env": "^7.0.2",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7",
    "wsrun": "^5.2.1"
  }
}
